<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.timscale"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/tsicon" android:label="@string/app_name" >
        
        <activity
            android:name=".MySplash" android:label="@string/app_name" android:screenOrientation="portrait" >            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".TimeScaleActivity" android:label="@string/app_name" 
            	  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.timescale.TIMESCALEACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".MyMenu" android:label="@string/app_name" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.timescale.MYMENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name=".About" 				 android:label="@string/app_name" android:screenOrientation="portrait"></activity>
        <activity android:name=".Calculate" 			 android:label="@string/app_name" android:screenOrientation="portrait"></activity>
        <activity android:name=".ReachOut" 				 android:label="@string/app_name" android:screenOrientation="portrait"></activity>
        <activity android:name=".ListViewDisplayAdapter" android:label="@string/app_name" android:screenOrientation="portrait"></activity>
        
        
    </application>
</manifest>